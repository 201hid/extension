{
  "manifest_version": 3,
  "name": "Screenshot Taker",
  "version": "1.1",
  "description": "An extension to take and manage screenshots in two steps with a countdown.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}

{
  "manifest_version": 3,
  "name": "Screenshot Taker",
  "version": "1.0",
  "description": "An extension to take screenshots of the current tab.",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
